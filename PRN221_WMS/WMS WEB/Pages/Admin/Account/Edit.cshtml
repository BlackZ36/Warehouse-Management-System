@page
@model WMS_WEB.Pages.Admin.Account.EditModel
@{
    Layout = "/Pages/Shared/_LayoutAdmin.cshtml";
}

<div class="pagetitle">
    <h1>Form Layouts</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Forms</li>
            <li class="breadcrumb-item active">Layouts</li>
        </ol>
    </nav>
</div><!-- End Page Title -->
<section class="section">
    <div class="row">


        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Account Information</h5>
                    <p class="text-danger">
                        text: @ViewData["notification"]
                    </p>

                    <!-- Vertical Form -->
                    <form class="row g-3" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="col-12">
                            <label asp-for="Account.AccountCode" class="form-label">Account Code</label>
                            <input asp-for="Account.AccountCode" type="text" class="form-control" value="@Model.Account.AccountCode" disabled>
                            <!-- Thêm trường ẩn để gửi dữ liệu -->
                            <input type="hidden" asp-for="Account.AccountCode" value="@Model.Account.AccountCode">
                        </div>

                        <!-- Username -->
                        <div class="col-12">
                            <label asp-for="Account.Username" class="form-label">Username</label>
                            <input asp-for="Account.Username" type="text" class="form-control" value="@Model.Account.Username" disabled>
                            <input type="hidden" asp-for="Account.Username" value="@Model.Account.Username">
                        </div>

                        <!-- Email -->
                        <div class="col-12">
                            <label asp-for="Account.Email" class="form-label">Email</label>
                            <input asp-for="Account.Email" type="text" class="form-control">
                            <span asp-validation-for="Account.Email" class="text-danger"></span>
                        </div>

                        <!-- Name -->
                        <div class="col-12">
                            <label asp-for="Account.Name" class="form-label">Name</label>
                            <input asp-for="Account.Name" type="text" class="form-control">
                            <span asp-validation-for="Account.Name" class="text-danger"></span>
                        </div>

                        <!-- Role -->
                        <div class="col-12">
                            <label for="inputRole" class="form-label">Role</label>
                            <select id="inputRole" class="form-select" asp-for="Account.Role">
                                <option value="1">Manager</option>
                                <option value="2">StoreKeeper</option>
                            </select>
                        </div>

                        <!-- Phone -->
                        <div class="col-12">
                            <label asp-for="Account.Phone" class="form-label">Phone</label>
                            <input asp-for="Account.Phone" type="text" class="form-control">
                            <span asp-validation-for="Account.Phone" class="text-danger"></span>
                        </div>

                        <!-- Status -->
                        <div class="col-12">
                            <label for="inputStatus" class="form-label">Status</label>
                            <input type="text" class="form-control fw-bold @(Model.Account.Status == 1 ? "text-success" : "text-danger")" value="@(Model.Account.Status == 1 ? "Active" : "Suspended")" disabled>
                        </div>

                        <input type="hidden" asp-for="Account.AccountId" />

                        <!-- Buttons -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Submit</button>
                            @if (Model.Account.Status == 1)
                            {
                                <a class="btn btn-warning" href="/Admin/Account/UpdateStatus?id=@Model.Account.AccountId">Deactivate</a>
                            }
                            else
                            {
                                <a class="btn btn-success" href="/Admin/Account/UpdateStatus?id=@Model.Account.AccountId">Activate</a>
                            }
                        </div>
                    </form><!-- Vertical Form -->

                </div>
            </div>





        </div>
    </div>
</section>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
